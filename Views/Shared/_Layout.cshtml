<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Boardroom Management System</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/light-bootstrap-dashboard.css" rel="stylesheet" />
</head>

<b<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <div class="sidebar" data-image="~/images/sidebar-5.jpg">
            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="#" class="simple-text">Boardroom Management</a>
                </div>
                <ul class="nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("Index", "Dashboard")">
                            <i class="nc-icon nc-chart-pie-35"></i>
                            <p>Dashboard</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="@Url.Action("BookRoom", "Rooms")">
                            <i class="nc-icon nc-calendar-60"></i>
                            <p>Book Room</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="@Url.Action("MeetingSchedule", "Meetings")">
                            <i class="nc-icon nc-notes"></i>
                            <p>Meeting Schedule</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="@Url.Action("Availability", "Rooms")">
                            <i class="nc-icon nc-check-2"></i>
                            <p>Room Availability</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="@Url.Action("Profile", "User")">
                            <i class="nc-icon nc-circle-09"></i>
                            <p>User Profile</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Main Panel -->
        <div class="main-panel">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">Dashboard</a>
                    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-bar burger-lines"></span>
                        <span class="navbar-toggler-bar burger-lines"></span>
                        <span class="navbar-toggler-bar burger-lines"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Notifications", "Home")">
                                    <i class="nc-icon nc-bell-55"></i>
                                    <span>Notifications</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Account", "User")">
                                    <i class="nc-icon nc-single-02"></i>
                                    <span>Account</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Logout", "Home")">
                                    <i class="nc-icon nc-button-power"></i>
                                    <span>Log out</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->

            <!-- Content Area -->
            <div class="content">
                <div class="container-fluid">
                    @RenderBody() <!-- This will render the specific view for each page -->
                </div>
            </div>
            <!-- End Content Area -->
        </div>
    </div>

    <!-- Core JS Files -->
    <script src="~/js/jquery.3.2.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/chartist.min.js"></script>
    <script src="~/js/light-bootstrap-dashboard.js"></script>
</body>
